# --- Python bytecode / caches ---
__pycache__/
*.py[cod]
*$py.class

# --- Native extensions ---
*.so

# --- Packaging / build artifacts ---
build/
dist/
*.egg-info/
.eggs/
wheels/
pip-wheel-metadata/
*.egg
MANIFEST

# --- Test / coverage artifacts ---
.pytest_cache/
.coverage
.coverage.*
htmlcov/
.tox/
.nox/
.mypy_cache/
.pytype/
.pyre/
.ruff_cache/

# --- Jupyter ---
.ipynb_checkpoints/

# --- Environments / local config ---
.env
.env.*
.venv/
venv/
env/
ENV/
conda-meta/
.mplconfig/

# --- OS junk ---
.DS_Store
Thumbs.db

# --- IDE / editor ---
# PyCharm / JetBrains
.idea/
*.iml
*.iws

# VS Code (keep shareable workspace settings if you want)
.vscode/*
!.vscode/settings.json
!.vscode/tasks.json
!.vscode/launch.json
!.vscode/extensions.json
!.vscode/*.code-snippets
!*.code-workspace

# ------------------------------------------------------------------------------
# Project-specific: data / results / models
# ------------------------------------------------------------------------------

# Data (do not commit datasets)
data/raw/
data/interim/
data/processed/
!data/README.md

# Results (keep folder structure + README + placeholders; ignore generated outputs)
results/figures/*
results/tables/*
results/metrics/*
!results/README.md
!results/figures/.gitkeep
!results/tables/.gitkeep
!results/metrics/.gitkeep

# Model artifacts / checkpoints (do not commit)
models/
checkpoints/
lightning_logs/
*.pt
*.pth
*.ckpt
*.h5
*.onnx
*.joblib
*.pkl
*.pb
*.tflite

# Experiment tracking / logs
runs/
mlruns/
wandb/
tensorboard/
logs/
log/
*.log
